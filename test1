////test1
int main()
{
	int arr[] = {1,2,3,4,5};
	short* p = (short*)arr;
	int i = 0;
	for (i = 0; i < 4; i++)
	{
		*(p+i) = 0;
	}
	for (i = 0; i < 5; i++)
	{
		printf("%d\n",arr[i]);
	}

	return 0;
}

//结果：0 0 3 4 5
////test2
int main()
{
	unsigned long PulArray[] = { 6,7,8,9,10 };
	unsigned long* pulPtr;
	pulPtr = PulArray;
	*(pulPtr + 3) += 3;//*(pulPtr + 3)的值由9变成了12
	printf("%d,%d\n",*pulPtr, *(pulPtr + 3));//6 12
	return 0;
}
